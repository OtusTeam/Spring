<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="questionDao" class="ru.otus.work.dao.QuestionDaoImpl">
        <constructor-arg name="resourceName" value="questions.csv"/>
    </bean>

    <bean id="questionService" class="ru.otus.work.service.QuestionServiceImpl">
        <constructor-arg name="dao" ref="questionDao"/>
    </bean>

    <bean id="answerDao" class="ru.otus.work.dao.AnswerDaoImpl">
    </bean>

    <bean id="answerService" class="ru.otus.work.service.AnswerServiceImpl">
        <constructor-arg name="dao" ref="answerDao"/>
    </bean>

</beans>
